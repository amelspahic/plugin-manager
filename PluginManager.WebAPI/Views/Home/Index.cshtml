@model IEnumerable<PluginManager.WebAPI.Models.PluginLibInfo>

<h2>Plugins Overview</h2>

<div class="row">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Available plugins</div>

        <!-- Table -->
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Plugin Name</th>
                    <th>Date Created</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    int rowNum = 1;
                    <tr>
                        <td>@rowNum</td>
                        <td>@item.Name</td>
                        <td>@item.DateCreated</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>